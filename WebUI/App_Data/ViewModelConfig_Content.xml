<ViewModelConfig defaulticon="icon-mnemonic">
  <!-- *********************basic content************************ -->
  <item>
    <mnemonic>ContentItem</mnemonic>
    <title>Контент</title>
    <service>Base.Content.Service.Abstract.IContentItemService, Base.Content</service>
    <entity>Base.Content.Entities.ContentItem, Base.Content</entity>
    <listview showPreview="true">
      <hiddenActions>
        <action id="AllCategorizedItems" />
        <action id="Settings" />
      </hiddenActions>
      <dataSource>
        <!-- NOTE: спец. фильр, чтобы не отображать записи для категорий у которых не задана мнемоника  -->
        <systemfilter value="it.ID = 0" />
        <sorts>
          <sort descriptor="SortOrder" order="desc" />
        </sorts>
      </dataSource>
    </listview>
    <icon>halfling halfling-list-alt</icon>
  </item>
  <item>
    <mnemonic>ContentCategory</mnemonic>
    <title>Контент - Категории</title>
    <service>Base.Content.Service.Abstract.IContentCategoryService, Base.Content</service>
    <entity>Base.Content.Entities.ContentCategory, Base.Content</entity>
    <detailview title="Категория" />
    <icon>glyphicon glyphicon-sampler</icon>
  </item>
  
  <item>
    <mnemonic>ContentSubscriber</mnemonic>
    <title>Контент - Категории - Подписчики</title>
    <service>Base.Content.Service.Abstract.IContentSubscriberService, Base.Content</service>
    <entity>Base.Content.Entities.ContentSubscriber, Base.Content</entity>
    <detailview title="Подписчик" />
    <listview>
      <condappearance>
        <add condition="IsAuthorizedUser == true" bg="\\#428BCA" />
        <add condition="IsAuthorizedUser == false" bg="\\#CCCCCC" />
      </condappearance>
    </listview>
    <icon>glyphicon glyphicon-envelope</icon>
  </item>
  
  <item>
    <mnemonic>Article</mnemonic>
    <title>Контент - Публикации</title>
    <service>Base.Content.Service.Abstract.IContentItemService, Base.Content</service>
    <entity>Base.Content.Entities.ContentItem, Base.Content</entity>
    <listview>
      <dataSource>
        <sorts>
          <sort descriptor="SortOrder" order="desc" />
        </sorts>
      </dataSource>
      <columns>
        <column propertyName="Date" hidden="true" />
        <column propertyName="Src" hidden="true" />
        <column propertyName="Value" hidden="true" />
      </columns>
    </listview>
    <detailview title="Публикация" isMaximaze="true">
      <toolbars>
        <toolbar title="Действия" controller="BusinessProcess" action="GetToolbar" ajax="true">
          <param key="mnemonic" value="Article" />
          <param key="objectid" value="[ID]" />
        </toolbar>
      </toolbars>
      <editors>
        <editor propertyName="Date" visible="false" isRequired="false" />
        <editor propertyName="Src" visible="false" isRequired="false" />
        <column propertyName="Value" visible="false" />
      </editors>
    </detailview>
    <icon></icon>
  </item>
  
