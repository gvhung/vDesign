<ViewModelConfig defaulticon="icon-mnemonic">
  <!-- *********************UserPromotion************************ -->
  <item>
    <mnemonic>UserPromotion</mnemonic>
    <readonly>true</readonly>
    <title>Заявки</title>
    <entity>Data.Entities.UserPromotion, Data</entity>
    <service>Data.Service.Abstract.IUserPromotionService, Data</service>
    <detailview title="Заявка на изменение типа пользователя" width="900" height="500">
      <toolbars>
        <toolbar title="Действия" controller="BusinessProcess" action="GetToolbar" ajax="true">
          <param key="mnemonic" value="UserPromotion" />
          <param key="objectid" value="[ID]" />
        </toolbar>
      </toolbars>
    </detailview>
    <listview>
      <condappearance>
        <add condition="State == 0" bg="\\#FEE529" />
        <add condition="State == 1" bg="\\#5cb85c" />
        <add condition="State == 2" bg="\\#d9534f" />
      </condappearance>
      <dataSource>
        <sorts>
          <sort descriptor="SubmitTime" order="desc" />
        </sorts>
      </dataSource>
    </listview>
    <icon>glyphicon glyphicon-notes-2</icon>
  </item>
  <item>
    <mnemonic>ExpertPromotion</mnemonic>
    <title>Заявка на расширение прав до эксперта</title>
    <entity>Data.Entities.UserPromotion, Data</entity>
    <service>Data.Service.Abstract.IUserPromotionService, Data</service>
    <detailview title="Заявка на расширение прав до эксперта" width="800" height="270">
      <editors>
        <editor propertyName="User" visible="false" />
        <editor propertyName="State" visible="false" />
        <editor propertyName="Department" visible="false" isRequired="false" />
        <editor propertyName="RequestedType" isReadOnly="true" />
        <editor propertyName="SubmitTime" visible="false" />
        <editor propertyName="DecideTime" visible="false" />
      </editors>
    </detailview>
    <icon>glyphicon glyphicon-notes-2</icon>
  </item>
