@model ChangePasswordModel

@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewBag.Title = "Смена пароля";
}

@using (Html.BeginForm())
{
    <div class="header text-center">
        <h3>@ViewBag.Title</h3>
    </div>

    <div class="main">
        @Html.ValidationSummary()

        @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control", placeholder = "Новый пароль" })
        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", placeholder = "Подтвердите пароль" })

        <span class="clearfix"></span>
    </div>

    <div class="main-footer">
        <div class="row">
            <div class="col-xs-6 col-md-6">
                <div class="left-section" style="display: table; height: 45px;">
                    <div class="left-section-content" style="display: table-cell; vertical-align: middle;">
                        <a href="@Url.Action("LogOff", "Account")">Вернуться</a>
                    </div>
                </div>

            </div>
            <div class="col-xs-6 col-md-6">
                <button type="submit" class="btn btn-lg btn-primary btn-block">Отправить</button>
            </div>
        </div>
    </div>
}
