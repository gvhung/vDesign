@{
    var wrapID = "wrap_" + Guid.NewGuid().ToString("N");
}

@(Html
.ContentEditorWidget("layout2")
.Title("Разметка - 2")
.TitleTemplate(
    @<text>
        <div class="row layout-preview">
            <div class="col-sm-6">&nbsp;</div>
            <div class="col-sm-6">&nbsp;</div>
        </div>
    </text>)
                .Wrap(wrapID)
                .Mnemonic("Content_Layout")
                .Template("tpl_" + wrapID))

<script id="tpl_@wrapID" type="text/template">
    <div class="row">
        <div class="col-sm-6 droptarget"></div>
        <div class="col-sm-6 droptarget"></div>
    </div>
</script>