@{
    var wrapID = "wrap_" + Guid.NewGuid().ToString("N");
}

@(Html
    .ContentEditorWidget("layout4")
    .Title("Разметка - 4")
.TitleTemplate(
    @<text>
        <div class="row layout-preview">
            <div class="col-sm-3">&nbsp;</div>
            <div class="col-sm-3">&nbsp;</div>
            <div class="col-sm-3">&nbsp;</div>
            <div class="col-sm-3">&nbsp;</div>
        </div>
    </text>)
            .Wrap(wrapID)
            .Mnemonic("Content_Layout")
            .Template("tpl_" + wrapID))

<script id="tpl_@wrapID" type="text/template">
    <div class="row">
        <div class="col-sm-3 droptarget"></div>
        <div class="col-sm-3 droptarget"></div>
        <div class="col-sm-3 droptarget"></div>
        <div class="col-sm-3 droptarget"></div>
    </div>
</script>