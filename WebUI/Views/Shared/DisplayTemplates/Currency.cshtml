@model EditorViewModel

@{
    string fieldID = "f_" + Guid.NewGuid().ToString("N");
}

<span class="glyphicon glyphicon-coins">&nbsp;</span><span id="@fieldID"></span>

<script>
    $(function () {
        var $f = $("#@fieldID");

        $f.closest("form").on("onAfterBind", function(e, form) {
            if (form.getPr("@Model.PropertyName")) {
                $f.html(kendo.toString(form.getPr("@Model.PropertyName"), "c"));
            } else {
                $f.html("");
            }
        });
    });
</script>


